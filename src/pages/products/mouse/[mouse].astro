---
import Layout from "../../../layouts/Layout.astro";
import { pages } from "./mouse"

export async function getStaticPaths() {
    return pages.map(({ mouse, name, description, image, originalPrice, offertPrice, brand, type }) => {
        return {
        params: { mouse },
        props: { name, description, image, originalPrice, offertPrice, brand, type },
        };
    });
}

const { mouse } = Astro.params;
const { name, description, image, originalPrice, offertPrice, brand, type } =
    Astro.props;
---

<Layout title=`Kiwi | Mouse - ${name}`>
    <div class="product-card">
        <img src={image} />
        <div class="information">
            <h3 class="name">{name}</h3>
            <p class="description">
                {description}
            </p>
            <div>{brand}</div>
            <div>{type}</div>
            <div class="price">
                <p class="offert-price">
                    {offertPrice}<span class="original-price">{originalPrice}</span>
                </p>
            </div>
        </div>
    </div>
    <br class="break" />
</Layout>

<style>
    .product-card {
        width: 90%;
        height: 100%;
        margin: auto;
        border-radius: 12px;
        box-sizing: border-box;
        padding-bottom: 30px;
    }

    img {
        width: 100%;
        margin-bottom: 0;
        border-radius: 12px;
    }

    .information {
        padding: 5px 24px;
        text-align: left;
    }

    .name {
        color: #e1ff91;
    }

    .description {
        color: #ccc;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* number of lines to show */
        line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .break {
        display: none;
    }

    .offert-price {
        color: #ddd;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .original-price {
        color: #f00;
        text-decoration: line-through;
        font-size: 1rem;
        margin-left: 20px;
    }

    @media screen and (max-width: 880px) {
        .product-card {
            width: 60%;
            height: 100%;
        }

        .break {
            display: block;
        }
    }
</style>
