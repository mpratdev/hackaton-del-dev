---
import Layout from "../../layouts/Layout.astro";
import MousepadSet from "../../components/products/MousepadSet.astro";
---

<Layout title="Kiwi | Mousepads">
    <h1>MOUSEPAD</h1>
    <MousepadSet />
</Layout>

<style>
    h1 {
        font-size: 7rem;
        text-align: center;
        font-weight: bold;
        font-style: italic;
        text-shadow: 2px 2px #000;
        color: #f00;
    }

    @media screen and (max-width: 1100px) {
        h1 {
            font-size: 6rem;
        }
    }

    @media screen and (max-width: 955px) {
        h1 {
            letter-spacing: 15px;
            font-size: 5rem;
        }
    }

    @media screen and (max-width: 880px) {
        h1 {
            letter-spacing: 10px;
            font-size: 4.5rem;
            margin: 70px 15px;
        }
    }

    @media screen and (max-width: 600px) {
        h1 {
            letter-spacing: 0px;
            font-size: 4rem;
            margin: 70px 10px;
        }
    }

    @media screen and (max-width: 440px) {
        h1 {
            letter-spacing: 0px;
            font-size: 3.5rem;
            margin: 70px 10px;
        }
    }
</style>
