---
import KiwiIcon from '../../public/icons/KiwiImage.astro';
import LogInButton from './buttons/LogInButton.astro';
import MenuSearch from './buttons/MenuButton.astro';
import SearchButton from './buttons/SearchButton.astro';
---

<nav>
    <div class="menu">
        <MenuSearch padding='yes' />
    </div>
    <a href="/" class="left-content">
        <KiwiIcon size="65px" />
        <span>kiwi</span>
    </a>
    <div class="center-anchors">
        <a id="home" class="page-anchor" href="/">home</a>
        <a id="shop" class="page-anchor" href="/shop">shop</a>
        <a id="kiwiPro" class="page-anchor" href="/kiwipro">kiwiPro</a>
        <a id="news" class="page-anchor" href="/news">news</a>
        <a id="about" class="page-anchor" href="/about">about us</a>
        <a id="support" class="page-anchor" href="/support">support</a>
    </div>
    <div class="right-content">
        <div id="search">
            <SearchButton />
        </div>
        <LogInButton />
    </div>
</nav>

<style>
    nav {
        display: flex;
        height: 88px;
        align-items: center;
        box-sizing: border-box;
        font-size: 1.5rem;
    }

    a {
        text-decoration: none;
    }

    .page-anchor {
        font-size: inherit;
        color: #ddd;
        margin-right: 25px;
        margin-left: 25px;
    }

    .page-anchor:active {
        color: #B5E98A;
    }

    .left-content {
        width: 170px;
        margin-left: 30px;
        margin-right: auto;
        display: flex;
        align-items: center;
    }

    .left-content span {
        font-weight: 600;
        font-style: italic;
        color: #ddd;
        margin-left: 10px;
        font-size: 2rem;
        color: #B5E98A;
    }

    .center-anchors {
        width: 722px;
        margin: auto;
    }

    .right-content {
        display: flex;
        width: 160px;
        margin-right: 30px;
        margin-left: auto;
        text-align: end;
        box-sizing: border-box;
        height: 50px;
        align-content: center;
        justify-content: space-between;
    }

    .menu {
        height: 50px;
        display: none;
    }

    #search, .menu {
        box-sizing: border-box;
        padding-top: 10px;
    }

    @media screen and (max-width: 1150px) {
        nav {
            font-size: 1.2rem;
        }

        .center-anchors {
            width: 638px;
        }
    }

    @media screen and (max-width: 1050px) {
        nav {
            font-size: 0.98rem;
        }
    }

    @media screen and (max-width: 955px) {
        .left-content span {
            font-size: 1.5rem;
        }

        .page-anchor {
            margin-right: 15px;
            margin-left: 15px;
        }

        .center-anchors {
            width: 456px;
        }
    }

    @media screen and (max-width: 880px) {
        .center-anchors {
            display: none;
        }

        .menu {
            display: block;
            color: #ddd;
            width: 130px;
        }

        .left-content {
            width: 140px;
            margin: auto;
        }

        .left-content span {
            font-size: 2rem;
        }

        .right-content {
            width: 130px;
            font-size: 1.04rem;
            margin-left: 0;
        }
    }
</style>