---
import More from "../buttons/More.astro";
import AddToCart from "../buttons/AddToCart.astro";

interface Props {
    name: string;
    description: string;
    image: string;
    originalPrice: string;
    offertPrice: string;
    page: string;
}

const { name, description, image, originalPrice, offertPrice, page } =
    Astro.props;
---

<div class="product-card">
    <a href={page}>
        <img src={image} />
    </a>
    <div class="information">
        <h3 class="name">{name}</h3>
        <p class="description">
            {description}
        </p>
        <div class="price">
            <p class="offert-price">
                {offertPrice}<span class="original-price">{originalPrice}</span>
            </p>
        </div>
        <div class="buttons">
            <More href={page} />
            <AddToCart />
        </div>
    </div>
</div>
<br class="break" />

<style>
    .product-card {
        width: 90%;
        height: 100%;
        margin: auto;
        border-radius: 12px;
        box-sizing: border-box;
        padding-bottom: 30px;
    }

    img {
        width: 100%;
        margin-bottom: 0;
        border-radius: 12px;
    }

    .information {
        padding: 5px 24px;
        text-align: left;
    }

    .name {
        color: #e1ff91;
    }

    .description {
        color: #ccc;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* number of lines to show */
        line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto;
    }

    .break {
        display: none;
    }

    .offert-price {
        color: #ddd;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .original-price {
        color: #f00;
        text-decoration: line-through;
        font-size: 1rem;
        margin-left: 20px;
    }

    @media screen and (max-width: 880px) {
        .product-card {
            width: 60%;
            height: 100%;
        }

        .break {
            display: block;
        }
    }
</style>
