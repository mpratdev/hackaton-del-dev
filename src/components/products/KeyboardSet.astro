<style>
    .brand-products {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: auto;
    }

    @media screen and (max-width: 880px) {
        .brand-products {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto;
        }
    }
</style>
