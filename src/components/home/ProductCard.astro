---
import More from "../buttons/More.astro";

interface Props {
    name: string;
    description: string;
    img: string;
    href: string;
}

const { name, description, img, href } = Astro.props;
---

<div class="product-card">
    <a href={href}>
        <img src={img} />
    </a>
    <div class="information">
        <h3 class="name">{name}</h3>
        <p class="description">
            {description}
        </p>
        <div class="buttons">
            <More href={href} />
            <!-- AddToCardButton -->
        </div>
    </div>
</div>

<style>
    .product-card {
        width: 90%;
        height: 100%;
        background: linear-gradient(#ddd, #232323);
        margin: auto;
        border-radius: 12px;
        box-sizing: border-box;
        box-shadow: 0px 0px 15px -10px #ddd;
        padding-bottom: 20px;
    }

    img {
        width: 100%;
        margin-bottom: 0;
        border-radius: 12px;
    }

    .information {
        padding: 5px 24px;
        text-align: left;
    }

    .name {
        color: #e1ff91;
    }

    .description {
        color: #ccc;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* number of lines to show */
        line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .buttons {
        display: flex;
        justify-content: space-between;
    }

    @media screen and (max-width: 880px) {
        .product-card {
            width: 60%;
            height: 100%;
        }

        .buttons {
            display: block;
            text-align: left;
        }
    }
</style>
