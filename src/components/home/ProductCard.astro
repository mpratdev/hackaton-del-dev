---
interface Props {
    name: string;
    description: string;
    img: string;
}

const { name, description, img } = Astro.props;
---

<div class="product-card">
    <img src={img} />
    <div class="information">
        <h3 class="name">{name}</h3>
        <p class="description">
            {description}
        </p>
    </div>
    <!-- MoreButton -->
    <!-- AddToCardButton -->
</div>

<style>
    .product-card {
        width: 90%;
        height: 100%;
        background: transparent;
        margin: auto;
        border-radius: 12px;
        overflow: hidden;
        box-sizing: border-box;
    }

    img {
        width: 100%;
        background: linear-gradient(#fff, transparent, to bottom);
    }

    .information {
        padding: 5px 30px;
        text-align: left;
    }
</style>
